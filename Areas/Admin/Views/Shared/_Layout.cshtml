<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset="utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light ">
        <div class="container-fluid">

            @Html.ActionLink("Dashboard", "Index", "Dashboard", "", new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">


                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">*@
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                @*<ul class="navbar-nav mr-auto">*@
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item active">
                        @Html.ActionLink("Pages", "Index", "Pages", "", new { @class = "nav-link" }) 
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sidebar", "EditSidebar", "Pages", "", new { @class = "nav-link" }) 
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Categories", "Categories", "Shop", "", new { @class = "nav-link" }) 
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Products", "Products", "Shop", "", new { @class = "nav-link" }) 
                    </li>
                    <li>
                        @Html.ActionLink("Orders", "Orders", "Shop", null, new { @class = "nav-link", style = "text-decoration: none" }) @*<a href="/account/logout">Logout</a>*@
                    </li>
                </ul>

                <!--New right menu-->
                <ul class="navbar-text">

                    <a href="/" class="navbar-brand" target="_blank">Shoping Cart</a>

                </ul>


            </div>
        </div>
    </nav>
    <div class="container body-content" style="margin-top: 55px; ">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My MVC Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

   
    @Scripts.Render("~/bundles/jqueryui")
   
    @Scripts.Render("~/bundles/CKEDITOR");

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
